{
  "compilerOptions": {
    "target": "es2022",
     "lib": ["ES2022"],
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true  
  },
  "ts-node": {
    "experimentalSpecifierResolution": "node"
  }
}